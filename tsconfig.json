{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@dolomite-margin/*": ["node_modules/@dolomite-exchange/dolomite-margin/*"],
      "@dolomite-margin/deployed-contracts/*": ["node_modules/@dolomite-exchange/dolomite-margin/dist/build/published_contracts/*"]
    }
  },
  "include": ["./scripts", "./packages/*/test", "./packages/*/src", "./packages/*/hardhat.config.ts"],
}
